{
  "name": "jiber-core",
  "version": "0.0.1",
  "description": "Synced data store",
  "main": "dist/commonjs/index.js",
  "module": "dist/es6/index.js",
  "types": "dist/commonjs/index.d.ts",
  "scripts": {
    "build": "tsc --module commonjs --outDir dist/commonjs && tsc --outDir dist/es6 --module es6",
    "test": "jest",
    "lint": "tslint -p tsconfig.json --type-check"
  },
  "author": "Jacob Grahn",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "jest": "^20.0.0",
    "ts-jest": "^20.0.0",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
