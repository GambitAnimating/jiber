{
  "name": "jiber-client",
  "version": "0.0.1",
  "description": "Synced data store",
  "main": "dist/server/index.js",
  "scripts": {
    "test": "jest src",
    "build": "npm run compile && npm run bundle && npm run compress",
    "compile": "tsc",
    "bundle": "rollup -c",
    "compress": "uglifyjs -c -m -o dist/jiber-client.bundle.min.js dist/jiber-client.bundle.js",
    "lint": "tslint -p tsconfig.json --type-check"
  },
  "author": "Jacob Grahn",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "jest": "^21.1.0",
    "rollup": "^0.49.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.1.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.2.2",
    "uglify-es": "^3.0.15"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "jiber-core": "file:../jiber-core"
  }
}
