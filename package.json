{
  "name": "hope-monolith",
  "version": "0.0.1",
  "description": "Hopefully synced data store",
  "main": "dist/server/index.js",
  "scripts": {
    "test": "jest src",
    "build": "npm run build-client && npm run build-server",
    "build-client": "npm run compile-client && npm run package-client && npm run bundle-client && npm run compress-client",
    "compile-client": "tsc -p tsconfig.client.json",
    "package-client": "cp src/client/package.json dist/client/package.json",
    "bundle-client": "rollup -n $hope -o dist/client/hope-client.bundle.js -f iife dist/client/client/index.js",
    "compress-client": "uglifyjs -c -m -o dist/client/hope-client.bundle.min.js dist/client/hope-client.bundle.js",
    "build-server": "tsc -p tsconfig.server.json && cp src/server/package.json dist/server/package.json",
    "lint": "tslint -p tsconfig.json --type-check"
  },
  "author": "Jacob Grahn",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.0",
    "ts-jest": "^20.0.0",
    "tslint": "^5.1.0",
    "tslint-config-standard": "^5.0.2",
    "typescript": "^2.2.2",
    "uglify-es": "^3.0.15"
  },
  "dependencies": {
    "rollup": "^0.42.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
