{
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "chokidar": "^1.7.0",
    "execa": "^0.8.0",
    "jest": "^21.1.0",
    "lerna": "^2.1.2",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --hoist",
    "test": "jest packages",
    "lint": "tslint -p tsconfig.json --type-check",
    "build": "cd packages/jiber-core && npm run build && cd ../jiber-client && npm run build && cd ../jiber-server && npm run build"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
