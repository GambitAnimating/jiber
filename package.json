{
  "name": "hope-monolith",
  "version": "0.0.1",
  "description": "Hopefully synced data store",
  "main": "dist/server/index.js",
  "scripts": {
    "test": "jest src",
    "build": "npm run build-client && npm run build-server",
    "build-client": "tsc -p tsconfig.client.json && cp src/client/package.json dist/client/package.json && npm run bundle-client",
    "bundle-client": "rollup -c",
    "build-server": "tsc -p tsconfig.server.json && cp src/server/package.json dist/server/package.json",
    "lint": "tslint -p tsconfig.json --type-check"
  },
  "author": "Jacob Grahn",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.0",
    "ts-jest": "^20.0.0",
    "tslint": "^5.1.0",
    "tslint-config-standard": "^5.0.2",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "rollup": "^0.42.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
