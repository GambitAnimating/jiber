{
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "chokidar": "^1.7.0",
    "coveralls": "^3.0.0",
    "execa": "^0.8.0",
    "jest": "^21.2.1",
    "lerna": "^2.5.0",
    "lodash": "^4.17.4",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --hoist",
    "prepare": "node build",
    "test": "jest packages --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint --fix -p tsconfig.json",
    "build": "node build",
    "watch": "node watch"
  },
  "repository": {
     "type" : "git",
     "url" : "https://github.com/Jiggmin/Jiber"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {}
}
